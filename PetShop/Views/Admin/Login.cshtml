
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="mx-auto col-12 col-md-8 col-lg-4">
    <div class="login__box">
        <div class="login__box-header">
            <img src="~/Assets/Images/logo-trans.png" alt="PetShop Logo" />
            @*<div class="col-lg-12 title">
                ADMIN PANEL
            </div>*@
        </div>
        <div class="login__box-main">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label class="form-control-label">USERNAME</label>
                    @Html.Editor(model => model.Username, new { @class = "form-control" })) *
                    @Html.ValidationMessageFor(model => mode.Username, new { @class = "error-message" })
                </div>
                <div class="form-group">
                    <label class="form-control-label">PASSWORD</label>
                    @Html.Editor(model => model.Password, new { @class = "form-control" })) *
                    @Html.ValidationMessageFor(model => mode.Password, new { @class = "error-message" })                </div>
                    <div class="form-group error">
                        @if (@ViewBag.Failedcount != null)
                        {

                            <label> Failed Attempt count is: @ViewBag.Failedcount</label>
                        }

                        @if (@ViewBag.NotValidUser != null)
                        {

                            <label> @ViewBag.NotValidUser</label>
                        }
                    </div>
                  <div class="loginForm-btn">
                    <button id="loginBtn" class="btn btn-outline-success">Login</button>
                </div>
            }
        </div>
    </div>
</div>
